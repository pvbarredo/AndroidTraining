<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="barredo.peter.training.activity.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView2" />

    <Button
        android:text="@string/fragment_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentBtn1"
        android:onClick="changeFragment"/>

    <Button
        android:text="@string/fragment_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentBtn2"
        android:onClick="changeFragment"/>

    <Button
        android:text="@string/btn_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:id="@+id/second_btn"
        android:onClick="btn_click" />

    <fragment
        android:name="layout.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentFirst"
        android:layout_weight="1"></fragment>

</LinearLayout>
